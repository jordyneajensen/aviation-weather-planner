<h1>Weather Information</h1>

<%= form_with(url: weather_path, method: :get, local: true) do |form| %>
  <div>
    <%= form.label :city, "Enter City Name:" %>
    <%= form.text_field :city, value: params[:city], placeholder: "e.g., New York" %>
    <%= form.submit "Get Weather" %>
  </div>
<% end %>

<% if @weather_data[:city].present? %>
  <h2>Current Weather in <%= @weather_data[:city] %></h2>
  <p><strong>Temperature:</strong> <%= @weather_data[:temperature] %> Â°C</p>
  <p><strong>Weather:</strong> <%= @weather_data[:weather] %></p>
  <p><strong>Humidity:</strong> <%= @weather_data[:humidity] %> %</p>
  <p><strong>Wind Speed:</strong> <%= @weather_data[:wind_speed] %> m/s</p>
  <p><strong>Cloud Coverage:</strong> <%= @weather_data[:cloud_coverage] %> %</p>
  <p><strong>Pressure:</strong> <%= @weather_data[:pressure] %> hPa</p>
  <p><strong>Visibility:</strong> <%= @weather_data[:visibility] %> m</p>
<% else %>
  <p>Please enter a city name to get the weather information.</p>
<% end %>



